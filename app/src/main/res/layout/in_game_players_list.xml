<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dip"
    android:layout_gravity="top">

    <TableRow>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/InGameListPlayerName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:textSize="25sp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:layout_alignBottom="@+id/InGameListPlayerLvL"
                android:layout_marginRight="155dp" />

            <TextView
                android:id="@+id/InGameListPlayerLvL"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="@string/level"
                android:layout_alignBottom="@+id/InGameListPlayerTotal"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="135dp" />

            <TextView
                android:id="@+id/InGameListPlayerLvLValue"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="110dp"
                android:layout_alignBottom="@+id/InGameListPlayerTotalValue"
                android:textIsSelectable="false"
                android:layout_alignParentStart="false" />

            <TextView
                android:id="@+id/InGameListPlayerTotal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="@string/total"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="40dp"
                android:layout_alignBottom="@+id/InGameListPlayerTotalValue"
                android:layout_marginBottom="0.5dp" />

            <TextView
                android:id="@+id/InGameListPlayerTotalValue"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp" />

        </RelativeLayout>
    </TableRow>
</TableLayout>