<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@drawable/list_state"
    android:padding="10dp">


    <TextView
        android:id="@+id/InGameListPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/InGameListPlayerLvL"
        android:duplicateParentState="true"
        android:textColor="@drawable/list_item_text_state"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/InGameListPlayerLvL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/InGameListPlayerTotal"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_gravity="center_vertical|left|top"
        android:layout_marginBottom="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/InGameListPlayerLvLValue"
        android:duplicateParentState="true"
        android:text="@string/level"
        android:textColor="@drawable/list_item_text_state"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/InGameListPlayerLvLValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/InGameListPlayerTotalValue"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_gravity="center_vertical|left|top"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/InGameListPlayerTotal"
        android:duplicateParentState="true"
        android:textColor="@drawable/list_item_text_state"
        android:textIsSelectable="false"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/InGameListPlayerTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/InGameListPlayerTotalValue"
        android:layout_gravity="center_vertical|left|top"
        android:layout_marginBottom="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/InGameListPlayerTotalValue"
        android:duplicateParentState="true"
        android:text="@string/total"
        android:textColor="@drawable/list_item_text_state"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/InGameListPlayerTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:duplicateParentState="true"
        android:textColor="@drawable/list_item_text_state"
        android:textSize="20sp" />

</RelativeLayout>
