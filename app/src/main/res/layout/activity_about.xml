<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:id="@+id/txtAbout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/about_the_app"
            android:padding="5dp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/AG"
        android:id="@+id/txtAG"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtDev_by" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/developed"
            android:id="@+id/txtDev_by"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_donate_999"
            android:layout_marginTop="20dp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/rate"
        android:id="@+id/txtRate"
        android:layout_below="@+id/txtAbout_text"
        android:layout_alignLeft="@+id/txtAbout_text"
        android:layout_alignStart="@+id/txtAbout_text"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_rate"
        android:id="@+id/btn_Rate"
        android:layout_below="@+id/txtRate" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/thanks"
        android:id="@+id/txtDonate"
            android:layout_below="@+id/btn_Rate"
        android:layout_alignLeft="@+id/txtRate"
        android:layout_alignStart="@+id/txtRate"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate_0.99"
        android:id="@+id/btn_donate_099"
        android:layout_below="@+id/txtDonate"
        android:layout_toEndOf="@+id/txtDonate"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate_1.99"
        android:id="@+id/btn_donate_199"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_donate_099" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate_3.99"
        android:id="@+id/btn_donate_399"
        android:layout_alignStart="@+id/btn_donate_099"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_donate_199" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate_9.99"
        android:id="@+id/btn_donate_999"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_donate_399" />


    </RelativeLayout>

</ScrollView>