<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/thanks_popup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtThanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgBtnRatePopip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="@string/txtThanks"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageButton
        android:id="@+id/imgBtnRatePopip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtDonatePopup"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@null"
        android:contentDescription="@string/btn_rate"
        android:src="@drawable/rate"/>

    <TextView
        android:id="@+id/txtDonatePopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="@string/txtRated"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDonatePopup"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@null"
        android:contentDescription="@string/contact"
        android:src="@drawable/contact" />

    <Button
        android:id="@+id/btnLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/imageButton"
        android:layout_toLeftOf="@+id/btnMore"
        android:gravity="center"
        android:text="@string/btn_showLater"
        />

    <Button
        android:id="@+id/btnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/btn_donate"/>

    <Button
        android:id="@+id/btnNeverShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/imageButton"
        android:layout_toRightOf="@+id/btnMore"
        android:gravity="center"
        android:text="@string/btn_neverAsk"
        />

</RelativeLayout>