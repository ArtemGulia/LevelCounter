<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    >

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.g_art.munchkinlevelcounter.FragmentPlayersList"
        android:id="@+id/playerList_Fragment"
        tools:layout="@layout/fragment_players_list" />

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.g_art.munchkinlevelcounter.FragmentPlayer"
        android:id="@+id/currentPlayer_Fragment"
        tools:layout="@layout/fragment_player" />
</LinearLayout>
</LinearLayout>