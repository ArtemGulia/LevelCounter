<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:orientation="vertical"
              android:padding="10dp">


    <com.db.chart.view.LineChartView
        xmlns:chart="http://schemas.android.com/apk/res-auto"

        android:id="@+id/LineChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight=".10"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        chart:chart_axisBorderSpacing="0dp"
        chart:chart_axisColor="@color/text_color"
        chart:chart_labelColor="@color/text_color"
        chart:chart_shadowDy="1dp"
        chart:chart_shadowRadius="1dp"/>


    <ListView
        android:id="@+id/isStatsPlayersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/text_color"
        android:dividerHeight="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"/>


</LinearLayout>