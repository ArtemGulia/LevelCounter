<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:src="http://schemas.android.com/tools"
                xmlns:tools="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
        android:id="@+id/battle_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/battle_player_screen" />

    <View
        android:id="@+id/diagonal_divider"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        tools:layout_editor_absoluteY="231dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@id/battle_player_view"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="-30dp"/>

    <include
        android:id="@+id/battle_monster_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/battle_monster_screen"
        android:layout_below="@+id/diagonal_divider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>