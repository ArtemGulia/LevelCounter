<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity$PlaceholderFragment">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_Players"
        android:id="@+id/btnPlayers"
        android:src="@drawable/munchkin_main_screen_players"
        android:background="@null"
        android:contentDescription="@string/main_screen_Players"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_Stats"
        android:id="@+id/btnStats"
        android:src="@drawable/munchkin_main_screen_stats"
        android:background="@null"
        android:contentDescription="@string/main_screen_Stats"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_Settings"
        android:id="@+id/btnSett"
        android:src="@drawable/munchkin_main_screen_settings"
        android:background="@null"
        android:contentDescription="@string/main_screen_Settings"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAbout"
        android:src="@drawable/munchkin_main_screen_about"
        android:background="@null"
        android:contentDescription="@string/main_screen_About"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
