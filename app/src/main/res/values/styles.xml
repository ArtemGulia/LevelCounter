<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- colorAccent is used as the default value for colorControlActivated,
          which is used to tint widgets -->
        <item name="colorAccent">@color/actionBarBackground</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/status_bar</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/actionBarBackground</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>

        <!--<item name="actionBarTheme">@style/AppTheme.Widget</item>-->
        <item name="android:actionBarStyle">@style/ActionBarMunchkin</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTab.Munchkin</item>
        <item name="android:buttonStyleToggle">@style/CustomSwitch</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_munchkin</item>

        <!--<item name="android:popupMenuStyle">@style/PopupMenu.Munchkin</item>-->
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Munchkin</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Munchkin</item>

        <item name="android:actionMenuTextColor">@color/actionBarText_color</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/actionBarText_color</item>

        <item name="android:dialogTheme">@style/Dialog.FullScreen</item>

    </style>

    <style name="floating_action_button_default">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="floating_action_button_player_default">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="floating_action_button_monster_default">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- styles for the action bar -->
    <style name="ActionBarMunchkin" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/actionBarBackground</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <!-- styles for the action bar tab -->
    <style name="ActionBarTab.Munchkin" parent="@android:style/android:Widget.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle" parent="@android:style/android:Widget.ActionBar.TabText">
        <item name="android:textColor">@color/actionBarText_color</item>
    </style>

    <!-- alert dialog style-->
    <style name="alertDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>

        <!--<item name="android:buttonStyle">@style/CustomButton</item>-->
        <!--<item name="buttonBarStyle">@style/CustomButton</item>-->
        <!--<item name="borderlessButtonStyle">@style/CustomButton</item>-->
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle" parent="@android:style/android:Widget.ActionBar.TabText">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CustomButton" parent="@android:style/android:Widget.Holo.Light.Button">
        <item name="android:textColor">@drawable/custom_button_text</item>
        <!--<item name="android:background">@drawable/btn_shape</item>-->
    </style>

    <style name="CustomSwitch" parent="@android:style/android:Widget.Holo.Light.Button.Toggle">
        <item name="android:thumb">@drawable/munchkin_switch_inner_holo_light</item>
        <item name="android:track">@drawable/munchkin_switch_track_holo_light</item>
    </style>

    <style name="PopupMenu.Munchkin" parent="@android:style/android:Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_munchkin</item>
    </style>

    <style name="DropDownListView.Munchkin" parent="@android:style/android:Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_munchkin</item>
    </style>

    <style name="DropDownNav.Munchkin" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_munchkin</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_munchkin</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_munchkin</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="AppTheme.Widget" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:popupMenuStyle">@style/PopupMenu.Munchkin</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Munchkin</item>
        <item name="android:textColor">@color/actionBarText_color</item>
    </style>

    <style name="MunchkinLevelCounterTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/actionBarBackground</item>
        <item name="colorPrimaryDark">@color/text_color</item>
        <item name="colorAccent">@color/actionBarBackground</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/status_bar</item>
        <item name="android:textColorPrimaryInverse">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorSecondaryInverse">@color/background</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorSecondary">@color/text_color</item>
    </style>

</resources>
