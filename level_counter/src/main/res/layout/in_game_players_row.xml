<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/list_state"
                android:padding="10dp">


    <TextView
        android:id="@+id/in_game_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/in_game_player_lvl"
        android:duplicateParentState="true"
        android:textColor="@drawable/list_item_text_state"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/in_game_player_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/in_game_player_total"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_gravity="center_vertical|left|top"
        android:layout_marginBottom="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/in_game_player_lvl_value"
        android:duplicateParentState="true"
        android:text="@string/level"
        android:textColor="@drawable/list_item_text_state"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/in_game_player_lvl_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/in_game_player_total_value"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_gravity="center_vertical|left|top"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/in_game_player_total"
        android:duplicateParentState="true"
        android:textColor="@drawable/list_item_text_state"
        android:textIsSelectable="false"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/in_game_player_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/in_game_player_total_value"
        android:layout_gravity="center_vertical|left|top"
        android:layout_marginBottom="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/in_game_player_total_value"
        android:duplicateParentState="true"
        android:text="@string/total"
        android:textColor="@drawable/list_item_text_state"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/in_game_player_total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:duplicateParentState="true"
        android:textColor="@drawable/list_item_text_state"
        android:textSize="20sp"/>

</RelativeLayout>
